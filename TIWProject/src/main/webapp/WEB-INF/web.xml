<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Aste Online</display-name>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index-spa.html</welcome-file>
    </welcome-file-list>

    <!-- ===== SERVLET HTML PURO (esistenti) ===== -->
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.polimi.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrazioneServlet</servlet-name>
        <servlet-class>it.polimi.servlet.RegistrazioneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrazioneServlet</servlet-name>
        <url-pattern>/registrazione</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>it.polimi.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VendoServlet</servlet-name>
        <servlet-class>it.polimi.servlet.VendoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VendoServlet</servlet-name>
        <url-pattern>/vendo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AcquistoServlet</servlet-name>
        <servlet-class>it.polimi.servlet.AcquistoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AcquistoServlet</servlet-name>
        <url-pattern>/acquisto</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreaArticoloServlet</servlet-name>
        <servlet-class>it.polimi.servlet.CreaArticoloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreaArticoloServlet</servlet-name>
        <url-pattern>/crea-articolo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreaAstaServlet</servlet-name>
        <servlet-class>it.polimi.servlet.CreaAstaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreaAstaServlet</servlet-name>
        <url-pattern>/crea-asta</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DettaglioAstaServlet</servlet-name>
        <servlet-class>it.polimi.servlet.DettaglioAstaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DettaglioAstaServlet</servlet-name>
        <url-pattern>/dettaglio-asta</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OffertaServlet</servlet-name>
        <servlet-class>it.polimi.servlet.OffertaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OffertaServlet</servlet-name>
        <url-pattern>/offerta</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChiudiAstaServlet</servlet-name>
        <servlet-class>it.polimi.servlet.ChiudiAstaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChiudiAstaServlet</servlet-name>
        <url-pattern>/chiudi-asta</url-pattern>
    </servlet-mapping>

    <!-- ===== SERVLET API per versione JavaScript ===== -->

    <!-- Login API -->
    <servlet>
        <servlet-name>LoginAPIServlet</servlet-name>
        <servlet-class>it.polimi.servlet.api.LoginAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAPIServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>

    <!-- Articoli API -->
    <servlet>
        <servlet-name>ArticoliAPIServlet</servlet-name>
        <servlet-class>it.polimi.servlet.api.ArticoliAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticoliAPIServlet</servlet-name>
        <url-pattern>/api/articoli</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticoliAPIServlet</servlet-name>
        <url-pattern>/api/articoli/*</url-pattern>
    </servlet-mapping>

    <!-- Aste API -->
    <servlet>
        <servlet-name>AsteAPIServlet</servlet-name>
        <servlet-class>it.polimi.servlet.api.AsteAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AsteAPIServlet</servlet-name>
        <url-pattern>/api/aste</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AsteAPIServlet</servlet-name>
        <url-pattern>/api/aste/*</url-pattern>
    </servlet-mapping>

    <!-- Offerte API -->
    <servlet>
        <servlet-name>OfferteAPIServlet</servlet-name>
        <servlet-class>it.polimi.servlet.api.OfferteAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OfferteAPIServlet</servlet-name>
        <url-pattern>/api/offerte</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OfferteAPIServlet</servlet-name>
        <url-pattern>/api/offerte/*</url-pattern>
    </servlet-mapping>

    <!-- ===== CONFIGURAZIONI ===== -->

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Filtro per encoding UTF-8 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>