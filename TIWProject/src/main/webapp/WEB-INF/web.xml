<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.aste.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VendoServlet</servlet-name>
        <servlet-class>com.aste.servlet.VendoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcquistoServlet</servlet-name>
        <servlet-class>com.aste.servlet.AcquistoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DettaglioAstaServlet</servlet-name>
        <servlet-class>com.aste.servlet.DettaglioAstaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OffertaServlet</servlet-name>
        <servlet-class>com.aste.servlet.OffertaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VendoServlet</servlet-name>
        <url-pattern>/vendo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcquistoServlet</servlet-name>
        <url-pattern>/acquisto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DettaglioAstaServlet</servlet-name>
        <url-pattern>/dettaglio-asta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OffertaServlet</servlet-name>
        <url-pattern>/offerta</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>